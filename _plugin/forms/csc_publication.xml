<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="attribs">
		<fieldset name="custom" label="Publication">
			<field
				name="csc_alt_titles"
				type="text"
				label="Alternative Titles"
				filter="STRING"
			/>
			<field
				name="csc_publication_author"
				type="text"
				label="Author"
				filter="STRING"
			/>
			<field
				name=""
				type="text"
				label="Cover Image"
				readonly="true"
				default="- Intro Image (Images and Links) -"
			/>
			<field
				name=""
				type="text"
				label="Release Date"
				readonly="true"
				default="- Created Date (Publishing) -"
			/>
			<field
				name="csc_publication_price"
				type="text"
				label="Price"
				filter="STRING"
			/>
			<field
				name="csc_publication_isbn"
				type="text"
				label="ISBN"
				filter="STRING"
			/>
      <field
        name="csc_pdf_preview"
        type="url"
        label="Google Drive PDF View Link"
        description="After enabling sharing for the pdf in Google Drive, add view link here." />
			<field
				name="csc_publication_notices"
				type="textarea"
				label="Copyright Note"
				filter="STRING"
			/>
      <field
        name="csc_toc"
        type="editor"
        label="Table of Contents"
        description="Write Table of Contents here."/>
		</fieldset>
	</fields>
</form>
