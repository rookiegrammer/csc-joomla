<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<!-- Files positions needs to be updated -->
<extension version="3.1" type="template" client="site" method="upgrade">
	<name>CSC</name>
	<version>1.0</version>
	<creationDate>2/05/2019</creationDate>
	<author>Deo Fetalvero, Tyrel Dogup, Joel Sarmiento</author>
	<copyright>Copyright (C) 2018 UPB-CSC. All rights reserved.</copyright>
	<description>This is the template for the UPB Cordillera Studies Center Website.</description>
	<files>
		<filename>index.php</filename>
		<filename>templateDetails.xml</filename>
		<folder>css</folder>
		<folder>html</folder>
		<folder>img</folder>
		<folder>js</folder>
		<folder>template</folder>
	</files>
	<positions>
		<position>menu</position>
		<position>banner</position>
		<position>user1</position>
		<position>user2</position>
		<position>user3</position>
		<position>user4</position>
		<position>footer-left</position>
		<position>footer-right</position>
		<position>footer</position>
	</positions>

	<config>
		<fields name="params">
			<fieldset name="advanced">

				<field
					name="logoFile"
					type="media"
					label="Logo Image"
					description="Site Logo"
					class=""
					default=""
				/>

				<field
					name="sitetitle"
					type="text"
					label="JGLOBAL_TITLE"
					description="JFIELD_ALT_PAGE_TITLE_LABEL"
					default=""
					filter="string"
				/>

				<field
					name="sitesubtitle"
					type="text"
					label="Subtitle"
					description="Site Subtitle"
					default=""
					filter="string"
				/>

				<field
					name="mission"
					type="textarea"
					label="Mission"
					description="Field"
					default=""
					filter="string"
				/>

				<field
					name="history"
					type="textarea"
					label="History"
					description="Organization History"
					default=""
					filter="string"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
